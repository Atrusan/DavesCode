    "version": "0.2.0",
    "configurations": [        
      
        {
          "type": "coreclr",
          "request": "launch",
          "name": "Launch Program",
          "program": "${workspaceFolder}/${input:programPath}",
          "cwd": "${workspaceFolder}"
        }
      ],
      "inputs": [
        {
          "type": "promptString",
          "id": "programPath",
          "description": "Enter the path to your C# executable (e.g., bin/Debug/net6.0/HelloWorld.dll)"
        }
      ]
    }